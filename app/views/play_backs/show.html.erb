<!-- VideoJs-->
<link href="https://vjs.zencdn.net/7.8.4/video-js.css" rel="stylesheet" />
<!-- If you'd like to support IE8 (for Video.js versions prior to v7) -->
<script src="https://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

<p id='notice'><%= notice %></p>

<p>
  <strong><%= t(:title).capitalize %>:</strong>
  <%= @play_back.title %>
</p>

<p>
  <video
    id="my-video"
    class="video-js"
    width="720"
    data-setup='{ "controls": true, "autoplay": true, "preload": "auto" }'
  >
    <source src="<%= @play_back.url %>" type="application/x-mpegURL" />

  </video>

  <script src="https://vjs.zencdn.net/7.8.4/video.js"></script>
</p>

<p>
  <strong><%= t(:url).capitalize %>:</strong>
  <%= @play_back.url %>
</p>

<p>
  <strong><%= t(:views).capitalize %>:</strong>
  <%= @play_back.views %>
</p>

<%= link_to t(:edit).capitalize , edit_play_back_path(@play_back) %> |
<%= link_to t(:back).capitalize , play_backs_path %>
